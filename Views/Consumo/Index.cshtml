@model IEnumerable<GerenciamentoHotel.Models.tb_consumo>

@{
    ViewBag.Title = "Listar Consumo";
    Layout = "~/Views/Shared/_LayoutNovo.cshtml";
}

<h2>Listar Consumo</h2>

<p>
    <a href="@Url.Action("Create", "Consumo")" title="Novo"><span class="btn btn-default fa fa-plus-circle">Novo Consumo</span></a>
    <a href="@Url.Action("Index", "Home")" title="Voltar"><span class="btn btn-default fa fa-home">Ir para Home</span></a>
</p>
<br/>
@if (Model.ToList().Count > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.data_consumo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valor_unitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valor_final)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tb_checkin.hora_entrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tb_itens_consumo.descricao)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.data_consumo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.valor_unitario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.valor_final)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tb_checkin.hora_entrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tb_itens_consumo.descricao)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Consumo", new { id = item.codigo })" title="Editar"><i class="fa fa-pencil-square-o"></i></a>
                    <a href="@Url.Action("Details", "Consumo", new { id = item.codigo })" title="Detalhes"><i class="fa fa-ellipsis-h"></i></a>
                    <a href="@Url.Action("Delete", "Consumo", new { id = item.codigo })" title="Excluir"><i class="fa fa-eraser"></i></a>
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="alert alert-info"><strong>Aviso:</strong>Nenhum consumo encontrado!</div>
}

