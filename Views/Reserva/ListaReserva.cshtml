@model List<GerenciamentoHotel.Models.tb_reserva>
@{
    ViewBag.Title = "Lista de Reserva";
    Layout = "~/Views/Shared/_LayoutReport.cshtml";
    int totalPessoas = 0;
}

<h2>Lista de Reservas</h2>

<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th style="width:15%;">Nº do Apartamento</th>
            <th style="width:10%">Entrada</th>
            <th style="width:10%">Saída</th>
            <th style="width:55%">Hóspede</thstyle>
            <th style="width:10%">Total de Pessoas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.tb_acomodacao.numeracao</td>
                <td>@String.Format("{0:dd/MM/yyyy}", item.data_entrada)</td>
                <td>@String.Format("{0:dd/MM/yyyy}", item.data_saida)</td>
                <td>@item.tb_hospede.nome</td>
                <td>@(item.qtd_adultos + item.qtd_criancas)</td>
            </tr>
            totalPessoas += ((int)item.qtd_adultos + (int)item.qtd_criancas);
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="4">Total de Ocupantes</th>
            <th>@totalPessoas</th>
        </tr>
    </tfoot>

</table>
