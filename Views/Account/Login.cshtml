@model GerenciamentoHotel.Models.tb_funcionario
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <p class="text-center">
            <h1>Hotel WKX</h1>
        </p>        
    </div>
    <div class="col-md-2"></div>
</div>
<br/>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><strong>Acessar o Gerenciador de Reservas</strong></h3>
            </div>
            <div class="panel-body">
                <center>
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.nome, new { @class = "form-control", placeholder = "Usuário" })
                                @Html.ValidationMessageFor(m => m.nome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.senha, new { @class = "form-control", placeholder="Senha" })
                                @Html.ValidationMessageFor(m => m.senha, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" value="Acessar" class="btn btn-default" />
                            </div>
                        </div>

                    }
                </section>
                    </center>
            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#nome").focus();
        });
        
        @{
            if (TempData["user-fail"] != null)
            {
                @(TempData["user-fail"] = null)
                <text>alert("Usuário ou senha inválidos!");</text>
            }

            if (TempData["user-bloqueado"] != null)
            {
                @(TempData["user-bloqueado"] = null)
                <text>alert("Usuário Bloqueado!");</text>
            }

            if (TempData["user-desativado"] != null)
            {
                @(TempData["user-desativado"] = null)
                <text>alert("Usuário Afastado!");</text>
            }

            if (TempData["grupo-desativado"] != null)
            {
                @(TempData["grupo-desativado"] = null)
                <text>alert("Grupo de Usuário Desativado!");</text>
            }
        }        

    </script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}