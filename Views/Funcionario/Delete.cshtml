@model GerenciamentoHotel.Models.tb_funcionario

@{
    ViewBag.Title = "Deletar Funcionário";
    Layout = "~/Views/Shared/_LayoutNovo.cshtml";
}

<h2>Deletar Funcionário</h2>

<h3>Você quer realmente excluir este funcionario?</h3>
<div>
    <h4>Funcionário</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.endereco)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.endereco)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.telefone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.telefone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.documento_identificacao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.documento_identificacao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tipo_documento_identificacao)
        </dt>

        <dd>
            @switch (Model.tipo_documento_identificacao)
            {
                case 0:
                    <span>Nenhum</span>
                    break;
                case 1:
                <span>CPF</span>
                    break;
                case 2:
                <span>RG</span>
                    break;
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.data_nascimento)
        </dt>

        <dd>
            @string.Format("{0:dd/MM/yyyy}",Model.data_nascimento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tipo_usuario)
        </dt>

        <dd>
            @switch (Model.tipo_usuario)
            {
                case 0:
                    <span>Nenhum</span>
                    break;
                case 1:
                    <span>Administrador</span>
                    break;
                case 2:
                    <span>Funcionário</span>
                    break;
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.senha)
        </dt>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" class="btn btn-default">
                <span class="fa fa-eraser"></span>Excluir
            </button>
            &nbsp;
            <a href="@Url.Action("Index", "Funcionario")" title="Voltar"><span class="btn btn-default fa fa-arrow-left">Voltar</span></a>
            <a href="@Url.Action("Index", "Home")" title="Voltar"><span class="btn btn-default fa fa-home">Ir para Home</span></a>
        </div>
        <br />
    }
</div>

